@model GalaxyForum.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<h1 class="text-white">Add Comment</h1>

<form asp-action="Create" asp-controller="Comments">
    <div class="form-group">
        <input type="hidden" asp-for="DiscussionId" />
        <label asp-for="Content" class="form-label text-white"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Comment" class="btn btn-primary mt-3" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}