@model GalaxyForum.Models.Discussion

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5 mt-0 bg-dark">
    <div class="card bg-dark text-white shadow-sm rounded-3">
        <div class="card-body">
            <h1 class="card-title text-start bg-danger p-3 rounded-3">Delete Discussion</h1>
            <hr class="text-white" />
            <h3 class="text-warning">Are you sure you want to delete this?</h3>
            <div class="mt-4">
                <h4>Discussion</h4>
                <dl class="row">
                    <dt class="col-sm-2">Title</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
                    <dt class="col-sm-2">Content</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Content)</dd>
                    @if (!string.IsNullOrEmpty(Model.ImageFilename))
                    {
                        <dt class="col-sm-2">Image</dt>
                        <dd class="col-sm-10">
                            <img src="@Url.Content("~/" + Model.ImageFilename)" class="img-fluid rounded-3" alt="Discussion Image" style="max-width: 400px; height: auto;" />
                        </dd>
                    }
                    <dt class="col-sm-2">Created On</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.CreateDate)</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="DiscussionId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>



