@model GalaxyForum.Models.Discussion

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-lg bg-dark" style=" color: white;">
                <div class="card-header text-white text-center" style="background: #1e1e2f;">
                    <h2>Create a New Discussion</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control bg-dark text-white" placeholder="Enter the title of your discussion" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Content -->
                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-bold">Content</label>
                            <textarea asp-for="Content" class="form-control bg-dark text-white" rows="8" placeholder="Write your discussion content here..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Image Upload -->
                        <div class="mb-4">
                            <label for="imageFile" class="form-label fw-bold">Upload Image (optional)</label>
                            <input type="file" name="imageFile" id="imageFile" class="form-control bg-dark text-white" />
                        </div>

                        <!-- Submit Button -->
                        <div class="text-end">
                            <a asp-action="Index" class="btn btn-outline-danger px-4 py-2">Cancel</a>
                            <button type="submit" class="btn btn-outline-primary px-4 py-2">Create</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}